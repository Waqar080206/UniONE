{
  "name": "unione-academic-platform",
  "version": "1.0.0",
  "description": "UniONE Authentication System - Hierarchical user management for academic platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:init": "node scripts/init-db.js",
    "db:reset": "node scripts/init-db.js --reset",
    "db:stats": "node scripts/init-db.js --stats",
    "seed:superadmin": "node scripts/seed-superadmin.js",
    "seed:superadmin:force": "node scripts/seed-superadmin.js --force",
    "seed:superadmin:verify": "node scripts/seed-superadmin.js --verify",
    "seed:superadmin:reset": "node scripts/seed-superadmin.js --reset"
  },
  "keywords": [
    "authentication",
    "academic",
    "mongodb",
    "express",
    "jwt"
  ],
  "author": "UniONE Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.1.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
