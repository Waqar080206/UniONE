{
  "name": "unione-platform",
  "version": "1.0.0",
  "description": "UniONE - Unified Student Academic Resource ONE",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:web": "cd apps/web-app && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "dev:mobile": "cd apps/mobile-app && npm run start",
    "build": "npm run build:shared && npm run build:web && npm run build:backend",
    "build:web": "cd apps/web-app && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "build:shared": "cd packages/shared && npm run build",
    "install:all": "npm install && npm run install:web && npm run install:mobile && npm run install:backend && npm run install:shared",
    "install:web": "cd apps/web-app && npm install",
    "install:mobile": "cd apps/mobile-app && npm install",
    "install:backend": "cd apps/backend && npm install",
    "install:shared": "cd packages/shared && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lerna": "^7.4.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}